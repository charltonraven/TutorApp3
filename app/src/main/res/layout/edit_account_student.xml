<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cb_pass"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:id="@+id/cb_first"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/cb_pass"
        android:layout_below="@+id/cb_pass"
        android:text="First Name"/>

    <CheckBox
        android:id="@+id/cb_last"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/cb_first"
        android:layout_below="@+id/cb_first"
        android:text="Last Name"/>

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_above="@+id/et_first"
        android:layout_toEndOf="@+id/cb_pass"/>

    <EditText
        android:id="@+id/et_first"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_below="@+id/cb_pass"
        android:layout_toEndOf="@+id/cb_first"
        android:ems="10"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/et_last"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/et_first"
        android:layout_below="@+id/cb_first"
        android:layout_toEndOf="@+id/cb_first"
        android:ems="10"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Edit Account Details"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:id="@+id/spinner_majors"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_below="@+id/cb_last"
        android:layout_toEndOf="@+id/cb_last"
        android:fadeScrollbars="false"/>

    <CheckBox
        android:id="@+id/cb_majors"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/cb_last"
        android:layout_below="@+id/cb_last"
        android:text="Major"/>

    <Button
        android:id="@+id/bt_accept"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Accept"/>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Cancel"/>

</RelativeLayout>