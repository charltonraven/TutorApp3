<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_lastName"
        android:hint="Last Name"
        android:textSize="24sp"
        android:layout_below="@+id/textView_header"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/cb_teacher"
        android:textColorHint="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_firstName"
        android:layout_height="50dp"
        android:hint="First Name"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/et_lastName"
        android:layout_alignBottom="@+id/et_lastName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/et_lastName"
        android:textColorHint="@android:color/black"/>

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spinner_majors"
        android:fadeScrollbars="false"
        android:layout_below="@+id/txt_major"
        android:layout_alignParentStart="true"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_weight="0.08"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_email"
        android:hint="Email (example@g.fmarion.edu)"
        android:textSize="24sp"
        android:textColorHint="@android:color/black"
        android:layout_below="@+id/et_lastName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your major:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_major"
        android:textSize="18sp"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="I am a teacher! "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_teacher"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/spinner_majors"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Button
        android:text="Continue   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:elevation="5dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword" />

</RelativeLayout>