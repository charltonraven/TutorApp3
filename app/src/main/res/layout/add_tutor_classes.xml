<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/app_bar_nav__main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_nav__main"
        app:menu="@menu/activity_menu_for_nav_drawer" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/sv_depart"
            android:layout_width="190dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:fillViewport="true"
            android:clickable="true"
            android:focusable="false"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_departList"
                android:clickable="true"
                android:onClick="onClick"
                android:focusable="false"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:id="@+id/lv_department"
                    android:layout_height="match_parent" >
                </ListView>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/sv_course"
            android:layout_width="190dp"
            android:layout_height="300dp"
            android:clickable="true"
            android:focusable="false"
            android:layout_alignTop="@+id/sv_depart"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:id="@+id/ll_courseList"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="297dp"
                    android:id="@+id/lv_course"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bt_accept"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="Accept"/>

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bt_accept"
            android:text="Cancel"/>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Edit Your Classes"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_above="@+id/sv_course"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_depart"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/sv_depart"
            android:layout_below="@+id/sv_depart"
            android:text="Departments"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/sv_course"
            android:layout_below="@+id/sv_course"
            android:text="Courses"
            android:textAlignment="center"
            android:textSize="18sp"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>